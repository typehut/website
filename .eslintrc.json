{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "sort-imports": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index",
          "internal",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true },
        "warnOnUnassignedImports": true
      }
    ],
    "@next/next/no-img-element": "off"
  }
}
